{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build -w smart-farm-backend",
        "nixpacksPlan": {
            "phases": {
                "build": {
                    "cacheDirectories": []
                }
            }
        }
    },
    "deploy": {
        "startCommand": "npx prisma migrate deploy --schema=backend/prisma/schema.prisma && npm run start:prod -w smart-farm-backend",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}