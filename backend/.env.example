# Smart Farm Backend - Environment Variables
# Copy this file to .env and fill in your values

# ==================== DATABASE ====================
DATABASE_URL="postgresql://postgres:password@localhost:5432/smartfarm?schema=public"

# ==================== JWT ====================
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"
JWT_EXPIRES_IN="7d"

# ==================== SERVER ====================
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# ==================== AUTH PROVIDERS ====================
# LINE Login
LINE_CHANNEL_ID=""
LINE_CHANNEL_SECRET=""
LINE_CALLBACK_URL="http://localhost:3001/api/auth/line/callback"

# LINE Bot (Messaging API) - สำหรับ Chatbot
LINE_BOT_CHANNEL_ACCESS_TOKEN=""
LINE_BOT_CHANNEL_SECRET=""

# LINE LIFF (Frontend)
LIFF_ID=""

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:3001/api/auth/google/callback"

# Facebook OAuth
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""
FACEBOOK_CALLBACK_URL="http://localhost:3001/api/auth/facebook/callback"

# ==================== AI SERVICES ====================
# Provider: openai | gemini | claude | groq | mock
AI_PROVIDER="mock"

# OpenAI (https://platform.openai.com)
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-3.5-turbo"

# Google Gemini (https://aistudio.google.com/apikey) - ฟรี!
GEMINI_API_KEY=""
GEMINI_MODEL="gemini-1.5-flash"

# Anthropic Claude (https://console.anthropic.com)
CLAUDE_API_KEY=""
CLAUDE_MODEL="claude-3-haiku-20240307"

# Groq (https://console.groq.com) - ฟรี!
GROQ_API_KEY=""
GROQ_MODEL="llama-3.1-70b-versatile"

# ==================== WEATHER ====================
# OpenWeatherMap (ฟรี 1000 calls/day)
OPENWEATHER_API_KEY=""

# ==================== FILE STORAGE ====================
# Provider: local | r2 | s3
UPLOAD_PROVIDER="local"

# Cloudflare R2 (ฟรี 10GB)
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="smart-farm"
R2_PUBLIC_URL=""

# ==================== OPTIONAL ====================
# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL="debug"
